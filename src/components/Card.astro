---
import Button from "./Button.astro";
const { title, price, descList } = Astro.props;
---

<div class="bg-gray sm:h-[340px] pt-6 rounded-lg flex flex-col">
  <h3 class="text-lg font-bold text-center">{title}</h3>
  <span class="text-2xl font-bold block text-center">$ {price}</span>
  <hr class="border-t border-black my-3" />
  <div class="px-6 pb-6 flex flex-col justify-between h-full">
    <ul class="text-sm">
      {
        descList.map((list) => (
          <li class="flex gap-2">
            <i>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
                />
              </svg>
            </i>
            {list}
          </li>
        ))
      }
    </ul>
    <div class="flex items-center justify-center mt-10 sm:mt-0">
      <Button title="Comprar" url="#" />
    </div>
  </div>
</div>
